{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,

    "target": "ES5",
    "module": "ESNext",
    "lib": ["ES2017", "DOM"],

    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
